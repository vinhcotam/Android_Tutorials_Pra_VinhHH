<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ex_slide3.ActivitySendMessage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title_reply"
            android:textSize="@dimen/sp_30"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_view_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/text_display_reply"
            android:textSize="@dimen/sp_20"
            android:visibility="invisible" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_send"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:hint="@string/enter_message" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_280"
        android:backgroundTint="@color/grey"
        android:text="@string/button_send" />

</RelativeLayout>

